[Tests]
  [standalone]
    type = RunException
    input = nek.i
    cli_args = "Mesh/volume=false Mesh/boundary='2' Problem/type='NekRSStandaloneProblem' --error"
    required_objects = 'NekRSProblem'

    # nekRS can't use more processors than elements
    max_parallel = 64
    expect_err = "This class does not transfer mesh displacements "
    requirement = "The system shall warn if Cardinal is using NekRSStandaloneProblem with NekRS's moving mesh problems."
  []
  [missing_boundary]
    type = RunException
    input = nek.i
    required_objects = 'NekRSProblem'

    # nekRS can't use more processors than elements
    max_parallel = 64
    expect_err = "'elast.par' has 'solver = elasticity' in the \[MESH\] block. This solver uses"
    requirement = "The system shall error if Cardinal is using the NekRS elasticity solver without indicating the moving boundary of interest"
  []
[]
