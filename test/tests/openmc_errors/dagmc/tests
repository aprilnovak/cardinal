[Tests]
  [invalid_elem]
    type = RunException
    input = openmc.i
    expect_err = "The MoabUserObject can only be used with a tetrahedral element \[Mesh\]!"
    requirement = "The system shall error if trying to do MOAB skinning operations on a non-tetrahedral mesh"
    required_objects = 'DagMCPostprocessor'
  []
  [nonexistent_material]
    type = RunException
    input = tet.i
    cli_args = 'UserObjects/skin/material_names="missing"'
    expect_err = "Could not find material 'missing' in 'material_names'!"
    requirement = "The system shall error if specifying a non-existent material name."
    required_objects = 'DagMCPostprocessor'
  []
[]
